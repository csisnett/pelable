<h1>Show Post</h1>

<ul>

  <li>
    <strong>Body:</strong>
    <%= @post.body %>
  </li>

  <li>
    <strong>Uuid:</strong>
    <%= @post.uuid %>
  </li>

</ul>

<span><%= link "Edit", to: Routes.post_path(@conn,  :edit, @post.title || "Untitled", @post.uuid) %></span>
<span><%= link "Back", to: Routes.post_path(@conn, :index) %></span>
