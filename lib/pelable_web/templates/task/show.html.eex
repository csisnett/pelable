<h1>Show Task</h1>

<ul>

  <li>
    <strong>Name:</strong>
    <%= @task.name %>
  </li>

  <li>
    <strong>Status:</strong>
    <%= @task.status %>
  </li>

</ul>

<span><%= link "Edit", to: Routes.task_path(@conn, :edit, @task.slug, @task.uuid) %></span>
<span><%= link "Back", to: Routes.task_path(@conn, :index) %></span>
