<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :title %>
  <%= textarea f, :title %>
  <%= error_tag f, :title %>
<br><br>
  <%= label f, humanize(:required_for_completion?) %>
  <%= checkbox f, :required? %>
  <%= error_tag f, :required? %>

  <div>
    <%= submit "Save" %>
  </div>
<% end %>
